      <section class="container-fluid info_box">
         <div class="row">
            <div class="col-md-6 col-sm-6 login_box">
              <p class="title_text">Log In</p>
               <div class="button_container">
                  <form method='post' action='/login'>
                     <label>Enter your email:</label>
                     <input type="text" name="email"/><br>
                     <label>Enter your password:</label>
                     <input type="password" name="password"/>
                     <p><button class="btn login_button" type="submit">Login</button></p>
                  </form>
               </div>
            </div>
            <div class="col-md-6 col-sm-6 signup_box">
              <p class="title_text">Sign Up</p>
               <div class="button_container">
                  <form method='post' action='/signup'>
                     <label class="label_white">Enter your email:</label>
                     <input type="text" id="signUpEmail" name="email"/><br>
                     <label class="label_white">Enter your password:</label>
                     <input type="password" id="signUpPassword" name="password"/>
                     <p><button type="submit" class="btn signup_button">Sign Up </button></p>
                  </form>
               </div>
            </div>
         </div>
      </section>



